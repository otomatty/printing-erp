{
  "extends": "@kit/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "~/config/*": ["./config/*"],
      "~/components/*": ["./components/*"],
      "~/types/*": ["./types/*"],
      "~/lib/*": ["./lib/*"],
      "~/actions/*": ["./actions/*"],
      "~/services/*": ["./services/*"],
      "~/hooks/*": ["./hooks/*"],
      "~/store/*": ["./store/*"],
      "~/data/*": ["./data/*"],
      "~/utils/*": ["./utils/*"],
      "~/public/*": ["./public/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "*.ts",
    "*.tsx",
    "./config/**/*.ts",
    "components/**/*",
    "lib/**/*.ts",
    "app",
    "../../packages/features/auth/src/components/login-dialog.tsx",
    "../../packages/ui/src/custom/theme-toggle.tsx",
    "../system/lib/server/gemini/skills.ts",
    "../system/components/gmail",
    "types/estimate.ts",
    "../web/instrumentation.ts",
    "(marketing)/robots.ts",
    "(marketing)/not-found.tsx",
    "(marketing)/layout.tsx",
    "(marketing)/global-error.tsx",
    "(marketing)/error.tsx",
    "(marketing)/_sample",
    "(marketing)",
    "../system/system"
  ],
  "exclude": ["node_modules", ".next"]
}
